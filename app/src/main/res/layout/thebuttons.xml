<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="0.46"
    tools:showIn="@layout/mainfragment">

    <Button
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="match_parent"
        android:layout_height="29dp"
        android:text="@string/Why1"
        android:id="@+id/Why1"
        android:background="@color/colorPrimary"
        android:textSize="15sp"/>

    <Button
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="match_parent"
        android:layout_height="29dp"
        android:text="@string/IranAmarDay"
        android:id="@+id/IranAmarDay"
        android:layout_weight="0"
        android:background="@color/colorPrimary"
        android:textSize="15sp"/>

    <Button
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="match_parent"
        android:layout_height="29dp"
        android:text="@string/PersAmarDay"
        android:id="@+id/PersAmarDay"
        android:layout_weight="0"
        android:background="@color/colorPrimary"
        android:textSize="15sp"/>

    <Button
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="match_parent"
        android:layout_height="29dp"
        android:text="@string/Why2"
        android:id="@+id/Why2"
        android:layout_weight="0"
        android:background="@color/colorPrimary"
        android:textSize="15sp"/>

    <Button
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="match_parent"
        android:layout_height="29dp"
        android:text="@string/TSPersThisWeek"
        android:id="@+id/TSPersThisWeek"
        android:layout_weight="0"
        android:background="@color/colorPrimary"
        android:textSize="15sp"/>

    <Button
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="match_parent"
        android:layout_height="29dp"
        android:text="@string/TSWThisWeek"
        android:id="@+id/TSWThisWeek"
        android:layout_weight="0"
        android:background="@color/colorPrimary"
        android:textSize="15sp"/>
</LinearLayout>